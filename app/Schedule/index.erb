<div class="toolbar">
  <% if System::get_property('platform') == 'Blackberry' %>
    <div class="leftItem regularButton">
      <%= link_to "Home", RhoConfig::start_path %>
    </div>
  <% end %>
  
  <h1 id="pageTitle">Schedule</h1>
</div>

<div class="content">
  <ul>
    <% @schedules.each do |schedule| %>
    
        <li>
          <a href="<%= url_for :action => :show, :id => schedule.object %>">
            <span class="title"><%= schedule.name %></span><span class="disclosure_indicator"></span>
          </a>
        </li>
    
    <% end %>
  </ul>
</div>