<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :index %>">Back</a>
  </div>
  
  <h1 id="pageTitle"><%= @type %></h1>
</div>

<div class="content">
  <ul>    
    <% @items.each do |item| %>
        <li>
          <a href="<%= url_for :action => :show, :id => @type + "-" + item %>">
            <span class="title"><%= item.gsub('_', ' ') %></span><span class="disclosure_indicator"></span>
          </a>
        </li>
    <% end %>
  </ul>
</div>