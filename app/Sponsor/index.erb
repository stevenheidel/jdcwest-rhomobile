<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :controller => :More, :action => :index %>">Back</a>
  </div>
  
  <h1 id="pageTitle">Sponsors</h1>
</div>

<div class="content">
  <ul>
    <% @sponsors.each do |sponsor| %>
    
        <li>
          <a href="<%= url_for :action => :show, :id => sponsor[:name] %>">
            <span class="title"><%= sponsor[:name].gsub("_", " ") %></span><span class="disclosure_indicator"></span>
          </a>
        </li>
    
    <% end %>
  </ul>
</div>