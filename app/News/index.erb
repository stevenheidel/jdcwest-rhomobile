<div class="toolbar">
  <div class="leftItem regularButton">
    <a href="<%= url_for :action => :update %>">Refresh</a>
  </div>
  
  <h1 id="pageTitle">News</h1>
</div>

<div class="content">
  <ul>
    <% if @news.size == 0 %>
      
      <li>You must be connected to the internet. Press refresh to get the latest News.</li>
      
    <% end %>
    
    <% @news.each do |news| %>
    
        <li>
          <a href="<%= url_for :action => :show, :id => news.object %>">
            <span class="title"><%= news.title %></span><span class="disclosure_indicator"></span>
          </a>
        </li>
    
    <% end %>
  </ul>
</div>