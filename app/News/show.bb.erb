<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :index %>">Back</a>
  </div>
  
  <h1 id="pageTitle"><%= @news.title %></h1>
</div>

<div id="content">

    <table>
            
      <tr>
    	  <td class="itemLabel">Date</td>
        <td class="itemValue"><%= @news.date%></td>
      </tr>
      
      <tr>
    	  <td class="itemLabel">Author</td>
        <td class="itemValue"><%= @news.author%></td>
      </tr>
      
      <tr>
        <td class="recordLabel"><%= @news.body%></td>
      </tr>
      
    </table>
</div>